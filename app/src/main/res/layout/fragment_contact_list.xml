<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ContactListFragment"
    android:background="@color/white"
    >
   <androidx.appcompat.widget.Toolbar
       android:id="@+id/contactList_toolbar"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
       android:background="@color/yellow_green">
       <Button
           android:id="@+id/addContacts"
           android:layout_width="60dp"
           android:layout_height="40dp"
           android:background="@color/white"
           android:layout_marginRight="10dp"
           android:layout_gravity="right"
           android:text="@string/done"
           />
   </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contactList_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/contactList_toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

         />


</androidx.constraintlayout.widget.ConstraintLayout>